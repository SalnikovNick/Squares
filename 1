#include <iostream>
using namespace std;

unsigned long long n,a,b,s;
int k;

unsigned long long IntSqr(unsigned long long n) {
	unsigned long long p = 0;
	while (p*p<=n) {
		p = p + 1;
	}
	return p - 1;
}

int main() {
	cout << "Enter the number:\n";
	cin >> n;
	if (n % 4 == 3) {
		cout << "The number can't be decomposed into the sum of two squares\n";
		return 1;
	}
	a = 0;
	b = IntSqr(n);
	k = 0;
	while (a <= b) {
		if (a * a + b * b == n) {
			cout << a << ' ' << b<<'\n';
			b = b - 1;
			k = k + 1;
		} 
		else if (a * a + b * b < n) {
			a = a + 1;
		}
		else b = b - 1;
	}

	if (k == 0) {
		cout << "The number can't be decomposed into the sum of two squares\n";
		return 1;
	}

	return 0;
}
